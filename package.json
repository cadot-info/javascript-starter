{
  "name": "javascript-starter",
  "version": "1.2.0",
  "description": "A starter kit for building web projects with modern JavaScript",
  "author": "Amit Agarwal <amit@labnol.org> (https://digitalinspiration.com)",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "format": "prettier --write src/**/*.{js,json,md}",
    "build": "npm run clean && parcel build src/index.html --no-minify --no-source-maps",
    "start": "parcel -p 8080 --hmr-port 8081 src/index.html --open"
  },
  "keywords": [
    "javascript",
    "webpack",
    "eslint",
    "prettier",
    "parcel",
    "es6",
    "babel",
    "boilerplate",
    "vscode",
    "starter"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "node-sass": "^4.13.0",
    "parcel": "^1.12.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0"
  }
}
